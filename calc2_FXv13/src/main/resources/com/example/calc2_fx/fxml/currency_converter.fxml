<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane alignment="CENTER" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.calc2_fx.controller.CurrencyConverterController">
    <Label text="From Currency:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <ComboBox fx:id="fromCurrency" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
    <Label text="To Currency:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <ComboBox fx:id="toCurrency" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <Label text="Amount:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="amount" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    <Button text="Convert" onAction="#handleConvert" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    <Label text="Result:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <TextField fx:id="result" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    <Button text="На главную" onAction="#handleBackToMain"
            GridPane.columnIndex="0" GridPane.rowIndex="5"
            GridPane.columnSpan="2"/>
</GridPane>